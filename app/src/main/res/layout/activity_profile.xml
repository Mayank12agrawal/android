<?xml  version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#fff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#7eb818"
        android:id="@+id/first">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:id="@+id/sec"


                android:background="@drawable/ic_arrow_back_black_24dp"


                ></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Profile"
                android:textSize="22dp"
                android:layout_toRightOf="@id/sec"
                android:textColor="#fff"
                android:padding="5dp"
                android:textStyle="bold">

            </TextView>


        </RelativeLayout>
    </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/first"
            android:layout_margin="5dp"
            android:id="@+id/th"
            android:padding="20dp"
            android:background="@drawable/rec"



            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/fo"




                android:background="@drawable/icon"
                >

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fo"
                android:id="@+id/fi"
                android:layout_centerHorizontal="true"
                android:text="Mayank Agrawal"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fi"
                android:layout_centerHorizontal="true"
                android:text="2nd Year"
                android:textSize="16dp"
                android:textColor="#696969"></TextView>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/th"
        android:layout_margin="5dp"
        android:id="@+id/six">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/seven"
            android:background="@drawable/bor">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:layout_alignParentLeft="true"
                android:textColor="#000"
                android:textSize="15dp"
                android:padding="10dp"
                ></TextView>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:padding="10dp"



                ></Switch>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bor"
            android:layout_below="@id/seven"
            android:id="@+id/nine">

            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:layout_alignParentLeft="true"
                android:textColor="#000"
                android:gravity="center|left"
                android:padding="9dp"
                android:textSize="15dp"
                android:id="@+id/eight"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"


                ></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bor"
            android:layout_below="@id/nine">

            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support"
                android:layout_alignParentLeft="true"
                android:textColor="#000"
                android:gravity="center|left"
                android:padding="9dp"
                android:textSize="15dp"
                android:id="@+id/ten"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"


                ></TextView>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/six"
        android:id="@+id/ele">

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon4"
            android:textColor="#fff"
            android:text="Log Out"
            android:textSize="20dp"
            android:layout_marginTop="12dp"

            ></Button>
    </RelativeLayout>
    </RelativeLayout>
